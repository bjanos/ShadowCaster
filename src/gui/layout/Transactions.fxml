<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="300.0" spacing="8.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.layout.TransactionsController">
    <children>
        <VBox>
            <children>
                <Label text="%inputLabel" />
                <TextArea fx:id="inputTxtArea" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
            </children>
        </VBox>
        <VBox>
            <children>
                <Label text="%outputLabel" />
                <TextArea fx:id="outputTxtField" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
            </children>
        </VBox>
        <HBox alignment="CENTER" spacing="16.0">
            <children>
                <Button fx:id="obscBtn" mnemonicParsing="false" onAction="#obscure" text="%obscureButton" />
                <Button fx:id="revBtn" mnemonicParsing="false" onAction="#reveal" text="%revealButton" />
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>
</VBox>
