<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.layout.SCController">
   <top>
      <Label text="%title" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <HBox>
               <children>
                  <Label fx:id="footerMsgLabel" text="%footerMessageLabel" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="footerTimeLabel" text="%footerTimeLabel" />
               </children>
            </HBox>
         </children>
      </GridPane>
   </bottom>
   <center>
      <TabPane>
         <tabs>
            <Tab text="%transactionTab">
               <content>
                  <VBox prefHeight="300.0" spacing="8.0" BorderPane.alignment="CENTER">
                     <children>
                        <VBox>
                           <children>
                              <Label text="%inputLabel" />
                              <TextArea fx:id="inputTxtArea" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="%outputLabel" />
                              <TextArea fx:id="outputTxtField" disable="true" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
                           </children>
                        </VBox>
                        <HBox alignment="CENTER" spacing="16.0">
                           <children>
                              <Button fx:id="obscBtn" mnemonicParsing="false" text="%obscureButton" />
                              <Button fx:id="revBtn" mnemonicParsing="false" text="%revealButton" />
                           </children>
                           <padding>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </padding>
                        </HBox>
                     </children>
                     <BorderPane.margin>
                        <Insets />
                     </BorderPane.margin>
                     <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab text="%dataTab">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <padding>
      <Insets left="16.0" right="16.0" top="16.0" />
   </padding>
</BorderPane>
